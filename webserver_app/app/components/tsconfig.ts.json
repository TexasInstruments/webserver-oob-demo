{
	"extends": "../../../.configs/tsconfig.json",
	"compilerOptions": {
		"target": "ES2018",
        "module": "ES6",
        "moduleResolution": "Node",
		"lib": [
			"DOM",
			"ES2018"
		],
		"allowJs": false,
		"rootDirs": [
			"./src"
		],
		"outDir": "./@ti",
		"typeRoots": [
			"../node_modules/@types",
		],
		"types": [
			"node",
			"mocha",
			"chai"
		]
	},
	"include": [
        "./src/**/migration/*.ts",
		"./src/**/lib/*.ts",
		"./src/**/test/*.ts",
		"./src/**/demo/*.ts"
	],
	"exclude": [
        "./node_modules",
        "./src/**/*.tsx",
        "./src/decorators/**/*.*",
		"./tools",
	]
}